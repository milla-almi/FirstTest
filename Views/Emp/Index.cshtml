@model IEnumerable<EmployementData>
@{
    ViewData["Title"] = "Index";
}
<partial name="_NotificationPartial" />

@*success for individual control*@
@*@if(TempData["success"]!= null)
{
    <h3>@TempData["success"]</h3>
}*@

<div class="container" style="width:100%" >
    <div class="row" >
        <div class="col-8">
        <form method="get">
           
           <input type="text"  name="SearchString" value="@ViewData["CurrentFilter"]"/>
           <input type="submit" class="btn btn-primary" value="Search" />
        </form>  
        </div>
        <div class="col-4">
           <a asp-controller="Emp" asp-action="Create" type="submit" class="btn btn-primary "  > Create Family </a>
        </div>
        
    </div>

   
       

<table class="table table-bordered table-striped" style="width:60%" >
    
    <thead>
        <tr>
            <th> Id </th>
            <th> FirstName </th>
            <th> LastName </th>
            <th> Department </th>
            <th> Salary </th>
            <th> Service </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td width="50%" > @item.Id </td>
                <td width="50%" > @item.FirstName </td>
                <td width="50%"> @item.LastName </td>
                <td width="50%"> @item.Department </td>
                <td width="50%"> @item.Salary </td>
                <td width="50%"> @item.Service </td> 
                <td width="30%">
                    <div>
                        <a class="btn btn-primary" asp-controller="Emp" asp-action="Edit" asp-route-id="@item.Id" > Edit</a> 
                    </div>
                </td> 
                <td width="30%">
                    <div >
                        <a class="btn btn-info" asp-controller="Emp" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
            
        }
    </tbody>
   
    
</table>
    

</div>
